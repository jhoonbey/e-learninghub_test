@model Course

<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header well" data-original-title>
            <h2><i class="icon icon-red icon-ok"></i>Approve Course</h2>
        </div>
        <div class="box-content">
            <form asp-area="Addmein" asp-controller="Courses" asp-action="Approve" asp-antiforgery="true" method="post" class="form-horizontal" enctype="multipart/form-data">
                @foreach (var prop in Model.GetType().GetProperties())
                {
                    if (prop.Name != "ActualPrice")
                    {
                        <input asp-for="@prop.Name" type="hidden" />
                    }
                }

                <fieldset>
                    <div class="control-group">
                        <label class="control-label" for="focusedInput">NET Price</label>
                        <div class="controls">
                            <label>@Model.Price</label>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="focusedInput">Actual Price</label>
                        <div class="controls">
                            <input asp-for="ActualPrice" type="text" />
                        </div>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a class="btn" asp-area="Addmein" asp-controller="Courses" asp-action="List">Cancel</a>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>