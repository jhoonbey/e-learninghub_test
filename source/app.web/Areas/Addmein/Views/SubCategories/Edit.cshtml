@model SubCategory

<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header well" data-original-title>
            <h2><i class="icon icon-red icon-edit"></i>Edit Sub Category</h2>
        </div>
        <div class="box-content">
            <form asp-area="Addmein" asp-controller="SubCategories" asp-action="Edit" asp-antiforgery="true" method="post" class="form-horizontal" enctype="multipart/form-data">

                <input asp-for="Id" type="hidden" />
                <input asp-for="IsDeleted" type="hidden" />
                <input asp-for="CreateDate" type="hidden" />
                <input asp-for="NameRU" type="hidden" />

                <fieldset>
                    <div class="control-group">
                        <label class="control-label" for="focusedInput">Category</label>
                        <div class="controls">
                            <select asp-for="CategoryId" asp-items="@ViewBag.Categories" style="margin-bottom: 0px;" data-rel="chosen" >
                                <option selected>--- SELECT ---</option>
                            </select>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="focusedInput">Name (AZ)</label>
                        <div class="controls">
                            <input asp-for="NameAZ" type="text" />
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="focusedInput">Name (EN)</label>
                        <div class="controls">
                            <input asp-for="NameEN" type="text" />
                        </div>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a class="btn" asp-area="Addmein" asp-controller="SubCategories" asp-action="List">Cancel</a>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>
