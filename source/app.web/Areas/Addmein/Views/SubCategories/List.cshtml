@model EntityViewCollection<SubCategoryViewModel>
<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header well" data-original-title>
            <a asp-area="Addmein" asp-controller="SubCategories" asp-action="Create" class="btn btn-small btn-success btn-round" style="float: right; margin-right: 10px;">Add new</a>
            <h2>Sub Categories</h2>
            <p style="float: right; margin: 5px 20px 0px 0px;">Count - <a>@Model.AllCount</a> </p>
        </div>
        <div class="box-content">
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                <thead>
                    <tr>
                        <th>Name-AZ</th>
                        <th>Name-EN</th>
                        <th>Parent Category</th>
                        <th style="width: 100px; text-align: center;">Create date</th>
                        <th style="width: 20%; text-align: center;">Operations</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items.OrderByDescending(c => c.CategoryName).ThenBy(k=>k.CreateDate))
                    {
                        <tr>
                            <td style="vertical-align: middle;">
                                @item.NameAZ
                            </td>
                            <td style="vertical-align: middle;">
                                @item.NameEN
                            </td>
                            <td style="vertical-align: middle;">
                                @item.CategoryName
                            </td>
                            <td style="width: 100px; text-align: center; vertical-align: middle;">
                                @item.CreateDate.ToString("yyyy-MM-dd", System.Globalization.CultureInfo.InvariantCulture)
                            </td>
                            <td class="center" style="width: 20%; text-align: center; vertical-align: middle;">
                                @*<a class="btn btn-danger" onclick="confirmDelete(@item.Id)" style="">
                                        <i class="icon-trash icon-white"></i>
                                        Delete
                                    </a>*@
                                <a class="btn btn-info" asp-area="Addmein" asp-controller="SubCategories" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="icon-edit icon-white"></i>
                                    Edit
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
