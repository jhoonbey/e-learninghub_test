                @Html.TextAreaFor(model => model.ValTR, new { @class = "cleditor", @style = "height : 500px;" })
            </div>
        </div>
                <div class="control-group">
                    <label class="control-label" for="focusedInput">RU</label>
                    <div class="controls">
                        @Html.TextAreaFor(model => model.ValRU, new { @class = "cleditor", @style = "height : 500px; WIDTH : 00%;" })
