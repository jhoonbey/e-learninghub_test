@model Option

<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header well" data-original-title>
            <h2><i class="icon icon-red icon-edit"></i>Manage @Model.Sec.Replace('_', ' ')</h2>
        </div>
        <div class="box-content">
            <form asp-area="Addmein" asp-controller="Option" asp-action="ManageOption" asp-antiforgery="true" method="post" class="form-horizontal" enctype="multipart/form-data">

                <input asp-for="Id" type="hidden" />
                <input asp-for="CreateDate" type="hidden" />
                <input asp-for="IsDeleted" type="hidden" />
                <input asp-for="Sec" type="hidden" />
                <input asp-for="NameRU" type="hidden" />

                <fieldset>
                    <div class="control-group">
                        <label class="control-label" for="focusedInput">AZ</label>
                        <div class="controls">
                            <textarea asp-for="NameAZ" type="text" class="ckeditor" style="height : 500px;" ></textarea>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="focusedInput">EN</label>
                        <div class="controls">
                            <textarea asp-for="NameEN" type="" class="ckeditor" style="height : 500px;" ></textarea>
                        </div>
                    </div>

