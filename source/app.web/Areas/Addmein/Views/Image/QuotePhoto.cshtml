@model ImageEntityCollection

<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header well">
            @if (Model.Images.Count < 1)
            {
                <a href="@Url.Action("CreateImage", "Image", new { area = "Addmein", sec = "Quote" })" class="btn btn-small btn-success btn-round" style="float: right; margin-right: 10px;">Add new </a>
            }

            <h2><i class="icon icon-red icon-image"></i>Quote Content photo</h2>
            @*<p style="float: right; margin: 5px 20px 0px 0px;">Count - <a>@Model.AllCount</a> </p>*@
        </div>
        <div class="box-content">
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                <thead>
                    <tr>
                        <th>Photo</th>
                        <th style="width: 100px; text-align: center;">Create date</th>
                        <th style="width: 20%; text-align: center;">Operations</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Images)
                    {
                        <tr>
                            <td style="vertical-align: middle;">
                                <img src="@Url.Content("~/_Files/Images/Quote/Original/" + item.Name)" alt="" width="500" />
                            </td>
                            <td style="width: 100px; text-align: center; vertical-align: middle;">
                                @item.CreateDate.ToString("yyyy-MM-dd", System.Globalization.CultureInfo.InvariantCulture)
                            </td>
                            <td class="center" style="width: 20%; text-align: center; vertical-align: middle;">
                                <a class="btn btn-danger" onclick="confirmDelete(@item.Id)" style="">
                                    <i class="icon-trash icon-white"></i>
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script>
    function confirmDelete(id) {
        if (confirm("Are you sure to delete this photo ?")) {
            document.location.href = '@Url.Action("Delete", "Image", new { area = "Addmein" })/' + id;
        }
    }
</script>
