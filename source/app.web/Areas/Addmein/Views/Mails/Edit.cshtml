@model Skill

<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header well" data-original-title>
            <h2><i class="icon icon-red icon-edit"></i>Edit Skill</h2>
        </div>
        <div class="box-content">
            <form asp-area="Addmein" asp-controller="Skills" asp-action="Edit" asp-antiforgery="true" method="post" class="form-horizontal" enctype="multipart/form-data">

                <input asp-for="Id" type="hidden" />
                <input asp-for="IsDeleted" type="hidden" />
                <input asp-for="CreateDate" type="hidden" />
                <input asp-for="NameRU" type="hidden" />

                <fieldset>
                    <div class="control-group">
                        <label class="control-label" for="focusedInput">Name (AZ)</label>
                        <div class="controls">
                            <input asp-for="NameAZ" type="text" />
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="focusedInput">Name (EN)</label>
                        <div class="controls">
                            <input asp-for="NameEN" type="text" />
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="focusedInput">Percent</label>
                        <div class="controls">
                            <input asp-for="Persent" type="number" />
                        </div>
                    </div>
                    @*<div class="control-group">
                            <label class="control-label" for="focusedInput">Name (TR)</label>
                            <div class="controls">
                                @Html.TextBoxFor(model => model.NameTR)
                            </div>
                        </div>*@
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a class="btn" asp-area="Addmein" asp-controller="Skills" asp-action="List">Cancel</a>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>