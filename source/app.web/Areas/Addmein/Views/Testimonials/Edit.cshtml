                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="focusedInput">Description</label>
                        <div class="controls">
                            @Html.TextAreaFor(model => model.Description, new { @class = "cleditor" })
                        </div>
                    </div>
