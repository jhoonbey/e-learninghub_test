@model  User
<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header well" data-original-title>
            <h2><i class="icon icon-red icon-edit"></i>Edit User</h2>
        </div>
        <div class="box-content">
            @using (Html.BeginForm("Edit", "Account", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
            {
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.CreateDate)
                @Html.HiddenFor(model => model.IsDeleted)
                <fieldset>
                    <div class="control-group">
                        <label class="control-label" for="focusedInput">Username<span style="color: #ee5f5b;">*</span></label>
                        <div class="controls">
                            @Html.TextBoxFor(model => model.Username)
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="focusedInput">Role <span style="color: #ee5f5b;">*</span></label>
                        <div class="controls">
                            @Html.DropDownListFor(model => model.Role, ViewBag.Roles as IEnumerable<SelectListItem>, new { data_rel = "chosen", @id = "role", @style = "" })
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="focusedInput">Fullname <span style="color: #ee5f5b;">*</span></label>
                        <div class="controls">
                            @Html.TextBoxFor(model => model.Fullname)
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a class="btn btn-danger" href="@Url.Action("List", "Account")">Cancel</a>
                    </div>
                </fieldset>
            }
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        //$("#role option[value='@Model.Role']").attr("selected", "selected");
    });
</script>
<script>
    jQuery(document).ready(function () {
        $("#role").chosen();
    });
</script>
