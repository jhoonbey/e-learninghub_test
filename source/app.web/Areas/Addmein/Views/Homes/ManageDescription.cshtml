@model  Option

<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header well" data-original-title>
            <h2><i class="icon icon-red icon-edit"></i>Edit Home Description</h2>
        </div>
        <div class="box-content">
            @using (Html.BeginForm("ManageDescription", "Homes", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
            {
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.CreateDate)
                @Html.HiddenFor(model => model.IsDeleted)
                @Html.HiddenFor(model => model.Sec)
                @Html.HiddenFor(model => model.ValTR)

                <fieldset>
                    <div class="control-group">
                        <label class="control-label" for="focusedInput">AZ</label>
                        <div class="controls">
                            @Html.TextBoxFor(model => model.Val, new { @style = "width: 80%;" })
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="focusedInput">EN</label>
                        <div class="controls">
                            @Html.TextBoxFor(model => model.ValEN, new { @style = "width: 80%;" })
                        </div>
                    </div>
                    @*<div class="control-group">
                            <label class="control-label" for="focusedInput">TR</label>
                            <div class="controls">
                                @Html.TextAreaFor(model => model.ValTR, new { @class = "cleditor", @style = "height : 500px;" })
                            </div>
                        </div>*@
                    <div class="control-group">
                        <label class="control-label" for="focusedInput">RU</label>
                        <div class="controls">
                            @Html.TextBoxFor(model => model.ValRU, new { @style = "width: 80%;" })
                        </div>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a class="btn" href="@Url.Action("ViewDescription", "Homes")">Cancel</a>
                    </div>
                </fieldset>
            }
        </div>
    </div>
</div>
