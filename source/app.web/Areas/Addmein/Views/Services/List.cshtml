@model ServiceEntityCollection


<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header well" data-original-title>
            <a href ="@Url.Action("Create", "Services", new { area = "Addmein" })" class="btn btn-small btn-success btn-round" style="float: right; margin-right: 10px;">Add new</a>
            <h2><i class="icon icon-red icon-bullet-on"></i>Services</h2>
            <p style="float: right; margin: 5px 20px 0px 0px;">Count - <a>@Model.AllCount</a> </p>
        </div>
        <div class="box-content">
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th style="width: 100px; text-align: center;">Create date</th>
                        <th>Main photo</th>
                        <th style="width: 20%; text-align: center;">Operations</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Services)
                    {
                        <tr>
                            <td style="vertical-align: middle;">
                                <a href="@Url.Action("View", "Services", new { id = item.Id, area = "Addmein" })" >@item.Name</a>
                            </td>
                            <td style="width: 100px; text-align: center; vertical-align: middle;">
                                @item.CreateDate.ToString("yyyy-MM-dd", System.Globalization.CultureInfo.InvariantCulture)
                            </td>
                            <td style="vertical-align: middle;">
                                @if (!string.IsNullOrEmpty(item.ImageName))
                                {
                                    <img src="@Url.Content("~/_Files/Images/Service/64/" + item.ImageName)" alt="" width="64" />
                                }
                            </td>
                            <td class="center" style="width: 20%; text-align: center; vertical-align: middle;">
                                <a class="btn btn-danger" onclick="confirmDelete(@item.Id)"  style="">
                                    <i class="icon-trash icon-white"></i>
                                    Delete
                                </a>
                                <a class="btn btn-info" href="@Url.Action("Edit", "Services", new { id = item.Id })" >
                                    <i class="icon-edit icon-white"></i>
                                    Edit
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script>
    function confirmDelete(id) {
        if (confirm("Are you sure to delete this Service ?")) {
            document.location.href = '@Url.Action("Delete", "Services", new { area = "Addmein" })/' + id;
        }
    }
</script>


