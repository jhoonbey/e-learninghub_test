@{
    Layout = "_AccountLayout";
}

@if (ViewBag.Message != null)
{
    <div class="container">
        <article class="content">
            <div class="row">
                <div class="col-sm-3 col-md-3">
                </div>
                <div class="col-sm-6 col-md-6">
                    <div class="content-block bottom-padding frame-shadow-lifted" style="    height: 120px;">
                        <p class="lead">@ViewBag.Message @Lang.CinfirmSuccessMessagePart</p>
                        <a href="@Url.Action("Start", "Account")" class="btn btn-primary pull-left">@Lang.SigninSubmitButton</a>
                    </div>
                </div>
                <div class="col-sm-3 col-md-3">
                </div>
            </div>
        </article>
    </div>
}