@{
    Layout = "_AccountLayout";
}

@if (ViewBag.Message != null)
{
    <div class="container">
        <article class="content">
            <div class="row">
                <div class="col-sm-3 col-md-3">
                </div>
                <div class="col-sm-6 col-md-6">
                    <div class="content-block bottom-padding frame-shadow-lifted">
                        <h6>@Lang.RegisteredPageTitle @ViewBag.Message,</h6>
                        <p>
                            @Lang.RegisteredPageContent
                        </p>
                    </div>
                </div>
                <div class="col-sm-3 col-md-3">
                </div>
            </div>
        </article>
    </div>
}
