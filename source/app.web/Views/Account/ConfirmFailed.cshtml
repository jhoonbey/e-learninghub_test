@{
    Layout = "_AccountLayout";
}

<div class="container">
    <article class="content">
        <div class="row">
            <div class="col-sm-3 col-md-3">
            </div>
            <div class="col-sm-6 col-md-6">
                <div class="content-block bottom-padding frame-shadow-lifted">
                    @{
                        var alert = TempData.Get<ClientAlertModel>("RedirectAlert");
                    }
                    @if (alert != null)
                    {
                        <p>
                            @Html.Raw(alert.Message)
                        </p>
                        TempData.Remove("RedirectAlert");
                    }
                </div>
            </div>
            <div class="col-sm-3 col-md-3">
            </div>
        </div>
    </article>
</div>