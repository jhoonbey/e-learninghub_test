                                                <li><a href="#" style="background-color:transparent !important;">Help Centre</a></li>
                                                <li><a asp-controller="Account" asp-action="Logout" style="background-color:transparent !important;">Sign out</a></li>
                                            </ul>
                                        </li>
                                    }
                                    else
                                    {
                                        <li>
                                            <a asp-controller="Account" asp-action="Start">
                                                @Lang.SigninText
                                                <i class="fa fa-lock after" style="    margin-left: 3px;"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a asp-controller="Account" asp-action="Start" asp-route-act="register">
