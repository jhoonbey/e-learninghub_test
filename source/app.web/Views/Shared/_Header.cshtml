                            <nav class="collapse collapsing navbar-collapse">
                                <ul class="nav navbar-nav navbar-right">
                                    @if (ViewBag.IsAuthorized != null && ViewBag.IsAuthorized)
                                    {
                                        if (ViewBag.Role == (int)EnumUserRole.Learner)
                                        {
                                            <li class="item-danger item-bg text-danger" style="color: #fff;">
                                                <a asp-controller="Profile" asp-action="BecomeInstructor">@Lang.BecomeInstructorText</a>
                                            </li>
                                        }
                                        else
                                        if (ViewBag.Role == (int)EnumUserRole.Instructor)
                                        {
                                            <li class="item-danger item-bg text-danger" style="color: #fff;">
                                                <a asp-controller="Course" asp-action="Create">@Lang.UploadCourseText</a>
                                            </li>
                                        }
                                    }
                                    else
                                    {
                                        <li class="item-danger item-bg text-danger" style="color: #fff;">
                                            <a asp-controller="Account" asp-action="Start" asp-route-act="register" asp-route-rd="i">@Lang.BecomeInstructorText</a>
                                        </li>
                                    }
                                    @if (ViewBag.IsAuthorized != null && ViewBag.IsAuthorized)
                                    {
                                        <li class="btn-group currency btn-select navbar-right" style="margin: 0px 0 0 0;">
                                            <a href="#">
                                                @ViewBag.Fullname
